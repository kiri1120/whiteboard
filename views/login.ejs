<!DOCTYPE html>
<html lang='ja'>
  <head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <meta name='description' content=''>
    <meta name='author' content=''>
    <title><%= config.title %></title>

    <link rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/assets/jquery-ui-bootstrap/jquery-ui-1.10.0.custom.css' />
    <link rel='stylesheet' href='./stylesheets/style.css' />

    <script src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'></script>
    <script src='//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js'></script>
    <script src='/assets/bootstrap/js/bootstrap.min.js'></script>
  </head>

  <body>
    <div class='navbar'>
      <div class='navbar-inner'>
        <div class='container'>
          <span class='brand'><%= config.title %></span>
        </div>
      </div>
    </div>

    <div class='container'>
      <div class='login'>
        <form class='form-horizontal' action='login' method='POST'>
          <legend>ログイン</legend>
          <div class='control-group'>
            <label class='control-label' for='userid'>UserID</label>
            <div class='controls'>
              <input type='text' id='userid' name='userid' placeholder='UserID'>
            </div>
          </div>
          <div class='control-group'>
            <label class='control-label' for='password'>Password</label>
            <div class='controls'>
              <input type='password' id='password' name='password' placeholder='password'>
            </div>
          </div>
          <div class='control-group'>
            <div class='controls'>
              <button class='btn btn-primary'>Login</button>
            </div>
          </div>
        </form>

        <form class='form-horizontal' action='signup' method='POST'>
          <legend>アカウント作成</legend>
          <div class='control-group'>
            <label class='control-label' for='signupName'>Nickname</label>
            <div class='controls'>
              <input type='text' id='signupName' name='nickname' placeholder='Nickname'>
            </div>
          </div>
          <div class='control-group'>
            <label class='control-label' for='signupUserid'>UserID</label>
            <div class='controls'>
              <input type='text' id='signupUserid' name='userid' placeholder='UserID'>
            </div>
          </div>
          <div class='control-group'>
            <label class='control-label' for='signupPassword'>Password</label>
            <div class='controls'>
              <input type='password' id='signupPassword' name='password' placeholder='password'>
            </div>
          </div>
          <div class='control-group'>
            <div class='controls'>
              <button class='btn btn-primary'>Sign Up</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
